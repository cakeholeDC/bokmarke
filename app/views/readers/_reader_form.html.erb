<%= form_for @reader do |f| %>
	<div>
		<%= f.label :username %>
		<%= f.text_field :username %>
	</div>
	<div>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>
	<div>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div>
		<%= f.label :age %>
		<%= f.number_field :age %>
	</div>
	<div>
		<%= f.label :bio %>
		<%= f.text_area :bio %>
	</div>
	<div>
		<%= f.label :fav_book %>
		<%= f.collection_select :fav_book, Book.all, :id, :title %>
	</div>
	<div>
		<%= f.label :fav_author %>
		<%= f.collection_select	:fav_author, Author.all, :id, :name %>
	<div>
		<%= f.submit submit_text %>
	</div>
<% end %>