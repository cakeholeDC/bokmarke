<h1><%= @reader.username %></h1>
<%= button_to "Edit Reader", edit_reader_path(@reader), method: 'get' %>
<%= button_to "Delete Reader", reader_path(@reader), method: 'delete' %>

<h2>Real Name: <%= @reader.name %></h2>
<p><%= @reader.bio %></p>

<p>Favorite Book: <%= @reader.fav_book_by_id %></p>
<p>Favorite Author: <%= @reader.fav_author_by_id%></p>


<%= form_for @goal do |f| %>
	<%= f.hidden_field :reader_id, value: @reader.id.to_i %>
	<div>
		<%= f.label :book_id, "Book" %>
		<%= f.collection_select :book_id, Book.all, :id, :title %>
	</div>
	<div>
		<%= f.label "Already Read" %>
		<%= f.radio_button :status, true %>
		<%= f.label "Want to Read" %>
		<%= f.radio_button :status, false %>
	</div>
	<%= f.submit "Add to Reading List" %>
<% end %>

<h1>Books List: </h1>

<% if @reader.goals.any? %>
	<table>
		<tr>
			<th>Title</th>
			<th>Author</th>
			<th>Status</th>
			<th>Date Updated</th>
		</tr>
	<%@reader.goals.each do |goal| %>
	<tr>
		<td><%= link_to goal.book.title, book_path(goal.book) %></td>
		<td><%= link_to goal.author.name, author_path(goal.author) %></td>
		<td><%= goal.check_if_true %></td>
		<td><%= goal.updated_at.strftime("%b %-d, %Y")%></td>
	</tr>
	<% end %>
<% end %>

