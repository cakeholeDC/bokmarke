<section class="hero is-info is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
      	Find Books
      </h1>
    </div>
  </div>
</section>


<!-- @TODO radios? default to title -->
<select name='type'>
	<option value='title'>Search by Title</option>
	<option value='author'>Search by Author</option>
</select>
<%= form_tag books_path do %>
	<%= text_field_tag :search %>
	<%= submit_tag "Search" , class: "tag is-link is-normal"%>
<% end %>

<br>
<%= button_to "Random Book", book_path(Book.all.sample.id), method: "get", class: "tag is-link is-normal" %>

<% if @books %>
	<ul>
		<% @books.each do |book| %>
			<li><%= link_to book.title, book_path(book) %></li>
		<% end %>
	</ul>
<% end %>