<%= form_for @review do |f| %>
	<%= f.hidden_field :book_id, value: book %>
	<%= f.hidden_field :goal_id, value: goal %>

	<div>
		<%= f.label :content, class: "label"  %>
		<%= f.text_area :content, class: "textarea" %>
	</div>
	<div>
		<%= f.label :rating, class: "label" %>
		<%= f.label "1" %>
		<%= f.radio_button :rating, 1 %>
		<%= f.label "2" %>
		<%= f.radio_button :rating, 2 %>
		<%= f.label "3" %>
		<%= f.radio_button :rating, 3 %>
		<%= f.label "4" %>
		<%= f.radio_button :rating, 4 %>
		<%= f.label "5" %>
		<%= f.radio_button :rating, 5 %>
	</div>
	<div>
		<%= f.label :recommend, "Recommended?", class: "checkbox" %>
		<%= f.check_box :recommend, class: "checkbox" %>
	</div>
	<div>

		<%= f.submit submit_text, class: "button is-link is-success" %>

	</div>
<% end %>

