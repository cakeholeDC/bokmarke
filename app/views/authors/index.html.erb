<div class="tile is-ancestor container">
	<div class="tile is-vertical is-parent">
	    <div class="tile is-child box">
	    	<p class="title level-item">
	    		All Authors
	    	</p>
	    	<div class="content container">
				<%= render partial: 'application/flash_error' %>
				<%= form_tag authors_path, method: 'get' do %>
					<%= text_field_tag :search, params[:search] %>
					<%= submit_tag "Search" %>
					<%= button_to "Random Author", author_path(Author.all.sample), method: "get" %>
				<% end %>

			</div>
	    	<div class="content container">
				<ul>
					<% @authors.each do |author| %>
						<li><%= link_to author.name, author_path(author) %></li>
					<% end %>
				</ul>
	    	</div>
	    </div>
	</div>
</div>