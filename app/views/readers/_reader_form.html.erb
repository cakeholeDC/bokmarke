<div class="field">
	<%= form_for @reader do |f| %>

		<div class="field">
			<%= f.label "Full Name", class: "label" %>
			<%= f.text_field :name, class: "input" %>
		</div>

		<div class="field">
			<%= f.label :username, class: "label"%>
      <div class="control has-icons-left has-icons-right">
				<%= f.text_field :username, class: "input"%>
				<span class="icon is-small is-left">
      				<i class="fas fa-user"></i>
      			</span> 
      </div>		 
		</div>

		<div class="field">
			<%= f.label :password , class: "label"%>
			<div class="control has-icons-left has-icons-right">
				<%= f.password_field :password, class: "input" %>
				<span class="icon is-small is-left">
      				<i class="fas fa-lock"></i>
      			</span> 
      		</div>
		</div>

		<div class="field">
			<%= f.label :age, class: "label" %>
			<%= f.number_field :age, class: "input" %>
		</div>

		<div class="field">
			<%= f.label :bio, class: "label" %>
			<%= f.text_area :bio, class: "textarea is-small" %>
		</div>

		<div class="field">
			<%= f.label :fav_book, "Favorite Book", class: "label" %>
			<div class="select">
				<%= f.collection_select :fav_book, Book.all.sort_by {|book| book.title}, :id, :title %>
			</div>
		</div>

		<div class="field">
			<%= f.label :fav_author, "Favorite Author", class: "label" %>
			<div class="select">
				<%= f.collection_select	:fav_author, Author.all.sort_by {|author| author.name}, :id, :name %>
			</div>
		</div>
    
		<div class="field">
			<%= f.submit submit_text, class: "button is-link is-success is-level" %>
		</div>
	<% end %>
</div>




