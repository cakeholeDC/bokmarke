<%= form_for @review do |f| %>
	<%= f.hidden_field :book_id, value: book %>
	<%= f.hidden_field :goal_id, value: goal %>

	<div>
		<%= f.label :content  %>
		<%= f.text_area :content %>
	</div>
	<div>
		<%= f.label :rating %>
		<%= f.label "1" %>
		<%= f.radio_button :rating, 1 %>
		<%= f.label "2" %>
		<%= f.radio_button :rating, 2 %>
		<%= f.label "3" %>
		<%= f.radio_button :rating, 3 %>
		<%= f.label "4" %>
		<%= f.radio_button :rating, 4 %>
		<%= f.label "5" %>
		<%= f.radio_button :rating, 5 %>
	</div>
	<div>
		<%= f.label :recommend, "Recommended?" %>
		<%= f.check_box :recommend %>
	</div>
	<div>
		<%= f.submit submit_text, class: "tag is-link is-normal" %>
	</div>
<% end %>

