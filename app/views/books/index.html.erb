<h1>Find a Book</h1>


<select name='type'>
	<option value='title'>Search by Title</option>
	<option value='author'>Search by Author</option>
</select>
<%= form_tag books_path do %>
	<%= text_field_tag :search %>
	<%= submit_tag "Search" %>
<% end %>

<br>
<%= button_to "Random Book", book_path(Book.all.sample.id), method: "get" %>

<% if @books %>
	<ul>
		<% @books.each do |book| %>
			<li><%= link_to book.title, book_path(book) %></li>
		<% end %>
	</ul>
<% end %>