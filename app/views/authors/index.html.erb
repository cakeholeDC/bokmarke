<h1>All Authors</h1>

<% if flash[:error] %>
	<div class="error-message"><%= flash[:error] %></div>
<% end %>


<%= form_tag authors_path, method: 'get' do %>
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Search" %>
<% end %>

<br>
<%= button_to "Random Author", author_path(Author.all.sample), method: "get" %>

<ul>
	<% @authors.each do |author| %>
		<li><%= link_to author.name, author_path(author) %></li>
	<% end %>
</ul>
