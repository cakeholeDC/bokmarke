<div class="tile is-ancestor container">
	<div class="tile is-vertical is-parent">
	    <div class="tile is-child box">
	    	<p class="title level-item">
	    		All Authors
	    	</p>
	    	<div class="content container">
				<%= render partial: 'application/flash_error' %>
				<div class="field has-addons-centered">
					<div class="control">
						<%= form_tag authors_path, method: 'get' do %>
							<%= text_field_tag :search, params[:search], class: "input", id:"author" %>
							<div class="container has-text-centered"><%= submit_tag "Search", class: "button is-success" %></div>
						<% end %>
						<div class="container has-text-centered"><%= button_to "Random Author", author_path(Author.all.sample), method: "get", class: "button" %></div>

					</div>
				</div>

			</div>
	    	<div class="content container">
				<ul>
					<% @authors.each do |author| %>
						<li><%= link_to author.name, author_path(author) %></li>
					<% end %>
				</ul>
	    	</div>
	    </div>
	</div>
</div>

